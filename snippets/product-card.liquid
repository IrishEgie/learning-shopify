<div class="group bg-white rounded-lg shadow hover:shadow-lg">
  <a href="{{ product.url }}">
    {% if product.featured_image %}
      <img src="{{ product.featured_image | img_url: '300x300' }}" 
           alt="{{ product.title }}"
           class="w-full h-48 object-cover rounded-t-lg group-hover:opacity-90">
    {% else %}
      <div class="w-full h-48 bg-gray-200 rounded-t-lg flex items-center justify-center">
        <span class="text-gray-500">No Image</span>
      </div>
    {% endif %}
  </a>
  
  <div class="p-4">
    <a href="{{ product.url }}">
      <h3 class="text-lg font-medium text-gray-900 hover:text-blue-500 truncate">
        {{ product.title }}
      </h3>
    </a>
    
    <div class="flex items-center justify-between mt-2">
      <div class="flex items-center space-x-2">
        {% if product.compare_at_price > product.price %}
          <span class="text-sm text-gray-500 line-through">
            {{ product.compare_at_price | money }}
          </span>
          <span class="text-lg font-bold text-red-500">
            {{ product.price | money }}
          </span>
        {% else %}
          <span class="text-lg font-bold text-gray-900">
            {{ product.price | money }}
          </span>
        {% endif %}
      </div>
      
      {% unless product.available %}
        <span class="text-sm text-red-500 font-medium">Sold Out</span>
      {% endunless %}
    </div>
    
    {% if product.available %}
      <form action="/cart/add" method="post" class="mt-4">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button type="submit" 
                class="w-full px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 font-medium">
          Add to Cart
        </button>
      </form>
    {% endif %}
  </div>
</div>