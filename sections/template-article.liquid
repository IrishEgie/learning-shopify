<article class="py-8">
    {% for block in section.blocks  %} 
        {% case block.type %}
            {% when 'article_title' %}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        <a href="{{blog.url}}" class="text-base uppercase text-gray-500 hover:gray-900 font-bold">{{blog.title}}</a>
                        <h1 class="text-4xl md:text-6xl font-medium">{{article.title}} </h1>
                    </div>
                </div>
            {% when 'article_author' %}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        {% if section.settings.enable_author %}
                            <small>{{article.author}}</small>
                        {% endif %}                        
                    </div>

                </div>
            {% when 'article_published_date' %}
                <div class="flex item-center justify-center">
                    {% if section.settings.enable_date %}
                        <small class="text-gray-500">{{ 'general.published_at' | t }} </small>
                    {% endif %}
                </div>
                <div class="flex item-center justify-center">
                    {% if section.settings.enable_date %} 
                        <time datetime="{{article.published_at | date: '%Y-%m-%d'}}">{{article.published_at| date: format:'on_date'}} </time>
                    {% endif %}
                </div>
            {% when 'article_image' %}
                <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
                    {% if article.image != blank %}
                        <img class="w-full h-80 md:h-96 object-cover object-center" src="{{ article.image | img_url: 'large' }}" alt="{{ article.image.alt }}" />
                    {% else %}
                        {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-80 md:h-96 bg-gray-100 object-cover object-center' }}
                    {% endif %}
                </div>
                
            {% when 'article_content' %}
                <div class="flex items-center justify center">
                    <div class="max-w-7xl">
                        {{article.content}}
                    </div>
                </div>
            {% else %}
                
        {% endcase %}
    {% endfor %}    
</article>


{% if blog.comments_enabled? %}
  <div id="comments" class="my-8">
    {% if article.comments_count > 0 %}
      <div class="flex-1 items-center justify-center mx-auto max-w-4xl px-4">
        <h1 class="text-lg mb-4 font-medium">See what people are saying</h1>
        {% paginate article.comments by 6 %}
          {% for comment in article.comments %}
            <div class="flex-1 border my-4 px-4 py-2 sm:px-6 sm:py-4 leading-relaxed">
              <span class="comment-author">{{ comment.author }}</span> 
              <span class="text-xs text-gray-400">{{ comment.created_at | date: "%B %d, %Y" }}</span>
              <p class="text-sm">{{ comment.content }}</p>
            </div>
          {% endfor %}

          {% if paginate.pages > 1 %}
            {{ paginate | default_pagination }}
          {% endif %}
        {% endpaginate %}
      </div>
    {% else %}
      <p>There are no comments yet for this article.</p>
    {% endif %}

    <div id="comment_form" class="mb-8">
      {% form 'new_comment', article %}
        <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
          {% if form.errors %}
            <div class="border">
              <div class="flex flex-row items-center w-full my-3">
                <div class="text-red-500">
                  {% render 'icon-failed' %}
                </div>
                <div class="text-sm font-medium ml-3">
                  Oh no! Your comment was not posted!
                </div>
              </div>
              <ul class="px-4 mb-3 ml-7 list-decimal">
                {% for error in form.errors %}
                  <li>
                    <span>{{ form.errors.messages[error] }}</span>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% elsif form.posted_successfully? %}
            <div class="flex flex-row items-center w-full my-3 p-5">
              <div class="text-green-500">
                {% render 'icon-success' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Comment posted successfully!
              </div>
            </div>
          {% endif %}  
          <div class="px-1 md:flex mb-3">
            <div class="px-3 md:w-1/2">
              <label for="comment_author" class="text-gray-700 font-medium uppercase text-xs mb-2">Name</label>
              <input type="text" name="comment[author]" id="comment_author" class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none focus:border-blue-500" placeholder="Your Name" required>
            </div>
            <div class="px-3 md:w-1/2">
              <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs mb-2">Email</label>
              <input type="email" name="comment[email]" id="comment_email" class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none focus:border-blue-500" placeholder="yourname@email.com" required>
            </div>
          </div>
          <div class="px-1 md:flex mb-3">
            <div class="px-3 md:w-full">
              <label for="comment_content" class="text-gray-700 font-medium uppercase text-xs mb-2">Comment</label>
              <textarea name="comment[content]" id="comment_content" rows="5" class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none focus:border-blue-500" placeholder="Your comment here..." required></textarea>
            </div>
          </div>
          <div class="px-3">
            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 focus:outline-none focus:shadow-outline">
              Post Comment
            </button>
          </div>
        </div>
      {% endform %}
    </div>
  </div>
{% else %}
  <div class="my-8">
    Comments are disabled for this blog.
  </div>
{% endif %}


{% schema %}
{
    "name": "Template Article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_author",
            "default": true,
            "label": "Display Author"
           
        },
        {
            "type": "checkbox",
            "id": "enable_date",
            "default": true,
            "label": "Display Published Date"
        }

        ],
        "blocks": [
            {
                "type": "article_title",
                "name": "Article Title",
                "limit": 1
            },
            {
                "type": "article_author",
                "name": "Article Author",
                "limit": 1
            },
            {
                "type": "article_published_date",
                "name": "Published Date",
                "limit": 1
            },
            {
                "type": "article_image",
                "name": "Article Image",
                "limit": 2
            },
            {
                "type": "article_content",
                "name": "Article Content",
                "limit": 2
            }
        ]
}
{% endschema %}